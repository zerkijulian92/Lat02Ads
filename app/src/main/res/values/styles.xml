<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style Pada Button-->
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="paddingStart">30dp</item>
        <item name="paddingEnd">30dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_red</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style Pada TextView-->
    <style name="Textview" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Textview.HighBlack">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Textview.HighWhite">
       <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
