<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style Pada Button-->
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="paddingStart">30dp</item>
        <item name="paddingEnd">30dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
    </style>

    <style name="Button.Opsional">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_red_line</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">80dp</item>
        <item name="android:paddingEnd">80dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Style Pada TextView-->
    <style name="Textview" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="Textview.High">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Textview.High.White">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Textview.Normal">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Textview.Normal.White">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Textview.Normal.Red">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

<!-- Style EditText-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:background">@drawable/shape_rectangle_red_line_5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
